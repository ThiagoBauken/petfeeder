# ==========================================
# PETFEEDER SAAS - ENVIRONMENT VARIABLES
# ==========================================

# ==================== APPLICATION ====================
NODE_ENV=development
PORT=3000
WEBSOCKET_PORT=8080
DOMAIN=localhost
APP_NAME=PetFeeder SaaS

# ==================== DATABASE ====================
DATABASE_URL=postgresql://petfeeder:your_password@postgres:5432/petfeeder
DB_HOST=postgres
DB_PORT=5432
DB_USER=petfeeder
DB_PASSWORD=your_secure_password_here
DB_NAME=petfeeder
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# ==================== REDIS ====================
REDIS_URL=redis://:your_redis_password@redis:6379
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0
REDIS_TTL=3600

# ==================== MQTT ====================
MQTT_BROKER=mqtt://mosquitto:1883
MQTT_HOST=mosquitto
MQTT_PORT=1883
MQTT_USERNAME=server
MQTT_PASSWORD=server123
MQTT_CLIENT_ID=petfeeder-server
MQTT_KEEP_ALIVE=60
MQTT_RECONNECT_PERIOD=5000

# ==================== SECURITY ====================
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_jwt_secret_min_32_characters_change_this_in_production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your_refresh_secret_min_32_characters_change_this
JWT_REFRESH_EXPIRES_IN=7d
COOKIE_SECRET=your_cookie_secret_min_32_characters
SESSION_SECRET=your_session_secret_min_32_characters

# Encryption
ENCRYPTION_KEY=your_encryption_key_32_characters_min

# CORS
CORS_ORIGIN=http://localhost:3001,http://localhost:3000
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==================== EMAIL / SMTP ====================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password-here
SMTP_FROM=PetFeeder <noreply@petfeeder.com>

# ==================== STRIPE (PAYMENTS) ====================
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxx
STRIPE_SUCCESS_URL=http://localhost:3001/payment/success
STRIPE_CANCEL_URL=http://localhost:3001/payment/cancel

# Stripe Price IDs
STRIPE_PRICE_BASIC=price_xxxxxxxxxxxxxxxxxxxxx
STRIPE_PRICE_PREMIUM=price_xxxxxxxxxxxxxxxxxxxxx
STRIPE_PRICE_ENTERPRISE=price_xxxxxxxxxxxxxxxxxxxxx

# ==================== STORAGE ====================
# Local storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg

# AWS S3 (optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET=petfeeder-uploads
S3_ENDPOINT=https://s3.amazonaws.com

# ==================== MONITORING ====================
# Sentry
SENTRY_DSN=https://xxxxxxxxxxxxxxxxxxxxx@sentry.io/xxxxx
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0

# Prometheus
PROMETHEUS_PORT=9090
METRICS_ENABLED=true

# Grafana
GRAFANA_PORT=3002
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# ==================== LOGGING ====================
LOG_LEVEL=info
LOG_DIR=./logs
LOG_MAX_FILES=14
LOG_MAX_SIZE=20m

# ==================== 2FA ====================
TWO_FACTOR_ENABLED=true
TWO_FACTOR_ISSUER=PetFeeder
TWO_FACTOR_WINDOW=1

# ==================== NOTIFICATIONS ====================
# Push Notifications
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_CLIENT_EMAIL=your_firebase_client_email
FIREBASE_PRIVATE_KEY=your_firebase_private_key

# Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_ENABLED=false

# WhatsApp (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886
WHATSAPP_ENABLED=false

# ==================== FEATURES ====================
# Feature flags
FEATURE_OTA_UPDATES=true
FEATURE_ANALYTICS=true
FEATURE_WEBHOOKS=true
FEATURE_API_V2=false

# Limits
MAX_DEVICES_FREE=1
MAX_DEVICES_BASIC=3
MAX_DEVICES_PREMIUM=10
MAX_PETS_PER_DEVICE=3
MAX_SCHEDULES_FREE=3
MAX_SCHEDULES_BASIC=10
MAX_SCHEDULES_PREMIUM=50

# ==================== BACKUP ====================
BACKUP_ENABLED=true
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# ==================== DEPLOYMENT ====================
# SSL/TLS
SSL_ENABLED=false
SSL_CERT_PATH=/certs/cert.pem
SSL_KEY_PATH=/certs/key.pem

# Let's Encrypt
LETSENCRYPT_EMAIL=admin@petfeeder.com
LETSENCRYPT_DOMAIN=petfeeder.com.br

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# ==================== DEVELOPMENT ====================
# Debug
DEBUG=petfeeder:*
VERBOSE=false

# Hot Reload
HOT_RELOAD=true

# API Documentation
SWAGGER_ENABLED=true
SWAGGER_PATH=/api-docs

# ==================== TIMEZONE ====================
TZ=America/Sao_Paulo
DEFAULT_TIMEZONE=America/Sao_Paulo
