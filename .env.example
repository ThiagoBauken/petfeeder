# ===========================================
# PetFeeder SaaS - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# APPLICATION
# ===========================================
NODE_ENV=production
PORT=3000
DOMAIN=petfeeder.local

# ===========================================
# DATABASE (PostgreSQL)
# ===========================================
DB_USER=petfeeder
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD
DATABASE_URL=postgresql://petfeeder:CHANGE_ME@postgres:5432/petfeeder

# ===========================================
# REDIS (Cache/Sessions)
# ===========================================
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD
REDIS_URL=redis://:CHANGE_ME@redis:6379

# ===========================================
# MQTT (IoT Communication)
# ===========================================
MQTT_BROKER=mqtt://mosquitto:1883
MQTT_USERNAME=backend
MQTT_PASSWORD=backend123

# ===========================================
# SECURITY
# ===========================================
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_ME_GENERATE_STRONG_SECRET
COOKIE_SECRET=CHANGE_ME_GENERATE_STRONG_SECRET

# ===========================================
# EMAIL (Optional - for notifications)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# ===========================================
# STRIPE (Optional - for payments)
# ===========================================
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# ===========================================
# AWS S3 (Optional - for file storage)
# ===========================================
S3_BUCKET=
S3_ACCESS_KEY=
S3_SECRET_KEY=

# ===========================================
# MONITORING (Optional)
# ===========================================
SENTRY_DSN=
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# ===========================================
# SSL/HTTPS (Production)
# ===========================================
LETSENCRYPT_EMAIL=your-email@example.com
